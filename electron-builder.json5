{
  "$schema": "https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json",
  // 应用唯一标识符
  "appId": "com.dongpl.linglong-store",
  // 应用名称
  "productName": "玲珑应用商店",
  "copyright": "Copyright © 2025 Jokul",
  "asar": true,
  "directories": {
    // 构建输出目录，使用版本号区分
    "output": "release/${version}"
  },
  // 自定义协议
  "protocols": {
    "name": "linglong-store",
    "schemes": ["linyapsss"]
  },
  "files": ["dist-electron","dist"],
  "linux": {
    "category": "Network",
    "icon": "icons/256x256.svg",
    "extraFiles": ["icons"],
    "desktop": {
      "entry": {
        "Name": "玲珑应用商店",
        "Type": "Application",
        "Terminal": false
      }
    },
    "target": [
      { "target": "deb", "arch": ["x64", "arm64"] },
      { "target": "AppImage", "arch": ["x64", "arm64"] },
      { "target": "pacman", "arch": ["x64", "arm64"] },
      // { "target": "flatpak", "arch": ["x64", "arm64"] },
      // { "target": "snap", "arch": ["x64", "arm64"] },
      // { "target": "rpm", "arch": ["x64", "arm64"] }
    ]
  },
  "deb": {
    "depends": [],
    "mimeTypes": ["application/x-layer", "application/x-uab"],
    "recommends": ["linglong-bin", "linglong-box"]
  }
}
